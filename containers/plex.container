[Container]
Image=lscr.io/linuxserver/plex:latest
ContainerName=plex
Network=host
Environment=PUID=${PLEX_UID}
Environment=PGID=${PLEX_UID}
Environment=TZ=Etc/UTC
Environment=VERSION=docker
Volume=/plex:/config
Volume=/tank/Anime:/media/Anime
Volume=/tank/AnimeFilms:/media/AnimeFilms
Volume=/tank/HomeMedia:/media/HomeMedia
Volume=/tank/Movies:/media/Movies
Volume=/tank/Music:/media/Music
Volume=/tank/ShortFilms:/media/ShortFilms
Volume=/tank/TVSeries:/media/TVSeries
Notify=no

[Install]
WantedBy=multi-user.target default.target

[Service]
Restart=unless-stopped